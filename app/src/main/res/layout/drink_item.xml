<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="4dp"
    android:background="@android:color/background_light"
    android:elevation="12dp"
    android:orientation="vertical"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/drink_image"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/drink" />

        <TextView
            android:id="@+id/drink_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/drink_image"
            android:padding="4dp"
            tools:text="Drink Name" />

        <TextView
            android:id="@+id/drink_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/drink_name"
            android:layout_toEndOf="@id/drink_image"
            android:padding="4dp"
            tools:text="Drink price" />

        <TextView
            android:id="@+id/drink_delivery_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/drink_price"
            android:layout_toEndOf="@id/drink_image"
            android:padding="4dp"
            tools:text="Delivery time" />

        <RatingBar
            android:id="@+id/drink_rating_bar"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/drink_delivery_time"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/drink_image"
            android:numStars="5" />

        <ImageButton
            android:id="@+id/drink_add_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="4dp"
            android:src="@drawable/ic_add_shopping_cart" />
    </RelativeLayout>
</android.support.v7.widget.CardView>